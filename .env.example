# PropelAI APOS - Environment Variables
# Copy this to .env and fill in your values

# ============== Environment ==============
PROPELAI_ENV=development  # development, staging, production

# ============== API Server ==============
API_HOST=0.0.0.0
API_PORT=8000

# ============== LLM Providers ==============
# Google (Primary - Gemini with 2M context window)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_PROJECT_ID=your_gcp_project_id

# Anthropic (Alternative for complex reasoning)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (Fallback)
OPENAI_API_KEY=your_openai_api_key_here

# ============== Database ==============
# PostgreSQL for LangGraph checkpointing
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=propelai
POSTGRES_USER=propelai
POSTGRES_PASSWORD=your_secure_password_here

# ============== Vector Store ==============
# Pinecone (for production)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=propelai-proposals

# ============== Security ==============
# API authentication (for production)
API_SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# ============== Feature Flags ==============
ENABLE_OCR=true
ENABLE_AUDIT_LOG=true
ENABLE_COMPETITOR_GHOSTING=true
